@page
@model BrandonMerriman.Views.IndexModel

@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <div class="col"></div>
        <div class="col-md-6 col-sm-6" id="commentaryDiv">
            <h1 class="quicksandFont mx-auto" id="greeting" style="display: none;" >
                @Model.Greeting
            </h1>
            <p style="display: none;">
                I am moving some things around. Please don't be alarmed.
            </p>
            <p style="display: none;">
                You can still find me at the sites above.
            </p>
        </div>
        <div class="col"></div>
    </div>
</div>



@section Scripts {
<script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script>
        $("document").ready(function() {
            $("#greeting").fadeIn("8000", function() {
                $("p").fadeIn("3000");
            });
            });
    </script>
}

